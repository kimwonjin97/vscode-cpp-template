    "version": "0.2.0",
    "configurations": [
        {
            "name": "RemedyBG Debug App.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "remedybg",
            "args": [
                "${workspaceFolder}\\build\\main.exe"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\data\\",
        },
            {
            "name": "Launch App.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/",
            "console": "externalTerminal"
        }
    ]
